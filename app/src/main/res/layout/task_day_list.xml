<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="17dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="100">
            <TextView
                android:id="@+id/task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sub_task_day"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/task_time_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="?attr/colorPrimaryFixed">
                    <TextView
                        android:id="@+id/task_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="07:00"
                        android:paddingHorizontal="7dp"
                        android:paddingVertical="2dp"
                        android:drawableStart="@drawable/bell"
                        android:drawableTint="?attr/colorPrimaryContainer"
                        android:drawablePadding="3dp"
                        android:textSize="11sp"
                        android:textColor="?attr/colorPrimaryContainer"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/repeate_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="2dp"
                    app:cardBackgroundColor="?attr/colorPrimaryFixed">
                    <TextView
                        android:id="@+id/icon_repeate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:paddingStart="3dp"
                        android:paddingEnd="1dp"
                        android:paddingVertical="2dp"
                        android:drawableStart="@drawable/ph_repeat_fill"
                        android:drawablePadding="3dp"
                        android:textSize="11sp"
                        android:drawableTint="?attr/colorPrimaryContainer"
                        android:textColor="?attr/colorPrimaryContainer"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/task_checkbox"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:contentDescription="tombol checkbox tugas"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/task_list_selector"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>