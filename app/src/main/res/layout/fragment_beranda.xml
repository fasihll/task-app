<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.beranda.BerandaFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="32dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selasa, 21 April 2024"
                android:layout_marginTop="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halo Andi"
                android:textSize="36sp"
                android:textColor="?attr/colorOnBackground"
                android:textStyle="bold"
                android:layout_marginTop="11dp"
                app:layout_constraintTop_toBottomOf="@id/datetime"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/subgreting"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="Semoga harimu menyenangkan!"
                android:textSize="16sp"
                android:textColor="?attr/colorOutline"
                android:translationY="-10dp"
                app:layout_constraintTop_toBottomOf="@id/greeting"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.search.SearchBar
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textAlignment="textStart"
                style="@style/Widget.Material3.SearchBar.Outlined"
                android:hint="Search"
                android:backgroundTint="@color/md_theme_onPrimary"
                app:defaultMarginsEnabled="false"
                app:menu="@menu/custom_searchbar"
                android:layout_marginTop="7dp"
                android:paddingStart="-30dp"
                app:layout_constraintTop_toBottomOf="@id/subgreting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_task_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:orientation="horizontal"
                tools:itemCount="1"
                tools:listitem="@layout/tasks_banner_list"
                android:layout_marginTop="28.09dp"
                app:layout_constraintTop_toBottomOf="@id/searchBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!--pakai viewpager2-->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/tasks_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rv_task_banner"/>
            
            <TextView
                android:id="@+id/title_tugasharian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tugas Harian"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginVertical="12.16dp"
                app:layout_constraintTop_toBottomOf="@id/tasks_banner"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_task_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="2"
                tools:listitem="@layout/task_day_list"
                app:layout_constraintTop_toBottomOf="@id/title_tugasharian"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.search.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Search"
        app:backgroundTint="@color/md_theme_onPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
