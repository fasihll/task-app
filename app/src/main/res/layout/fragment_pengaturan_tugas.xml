<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:orientation="vertical"
    tools:context=".ui.main.profile.setting.pengaturantugas.PengaturanTugasFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:textColor="?attr/colorOnBackground"
        app:navigationIcon="@drawable/ic_back_24"
        app:subtitleTextColor="?attr/colorOnBackground">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Pengaturan Tugas"
            android:textColor="?attr/colorOnBackground"
            android:textSize="20sp"
            android:textStyle="bold" />

    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <!-- Ikon Start -->
                    <ImageView
                        android:id="@+id/icon_start"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_pengaturantugas"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorPrimary" />

                    <!-- Teks -->
                    <TextView
                        android:id="@+id/menu_opsi"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical|start"
                        android:paddingVertical="6dp"
                        android:text="Opsi Pengurutan"
                        android:textAllCaps="false"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/icon_end"
                        app:layout_constraintStart_toEndOf="@+id/icon_start"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5" />

                    <!-- Ikon End (Dropdown) -->
                    <ImageView
                        android:id="@+id/icon_end"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_down_dropdown"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/colorSecondary" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageView
                    android:id="@+id/devider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:src="@drawable/ic_devider"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/opsi_pengurutan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorOnPurple"
                    android:orientation="vertical"
                    android:paddingStart="56dp"
                    android:visibility="gone">

                    <!-- Opsi Pertama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <!-- Text di Start -->
                        <TextView
                            android:id="@+id/tv_option_first_start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pertama"
                            android:textColor="?attr/colorSecondary"
                            android:textSize="14sp" />

                        <!-- Text di End -->
                        <TextView
                            android:id="@+id/tv_option_first_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Dari Prioritas"
                            android:textColor="?attr/colorSecondary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Opsi Kedua -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <!-- Text di Start -->
                        <TextView
                            android:id="@+id/tv_option_second_start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kedua"
                            android:textColor="?attr/colorSecondary"
                            android:textSize="14sp" />

                        <!-- Text di End -->
                        <TextView
                            android:id="@+id/tv_option_second_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Dari Waktu"
                            android:textColor="?attr/colorSecondary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:src="@drawable/ic_devider" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menu_notifikasi"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|start"
                    android:paddingVertical="6dp"
                    android:text="Notifikasi"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp"
                    app:icon="@drawable/ic_bell"
                    app:iconPadding="16dp"
                    app:iconSize="30dp"
                    app:iconTint="?attr/colorPrimary" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:src="@drawable/ic_devider" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menu_tema"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|start"
                    android:paddingVertical="6dp"
                    android:text="Tema"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp"
                    app:icon="@drawable/ic_dark_theme_24_filled"
                    app:iconPadding="16dp"
                    app:iconSize="30dp"
                    app:iconTint="?attr/colorPrimary" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:src="@drawable/ic_devider" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menu_sinkron"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|start"
                    android:paddingVertical="6dp"
                    android:text="Sinkronisasi"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp"
                    app:icon="@drawable/ic_sync_outline"
                    app:iconPadding="16dp"
                    app:iconSize="30dp"
                    app:iconTint="?attr/colorPrimary" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:src="@drawable/ic_devider" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menu_pencadangan"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|start"
                    android:paddingVertical="6dp"
                    android:text="Pencadangan"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp"
                    app:icon="@drawable/ic_cloud_backup"
                    app:iconPadding="16dp"
                    app:iconSize="30dp"
                    app:iconTint="?attr/colorPrimary" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:src="@drawable/ic_devider" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menu_bahasa"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|start"
                    android:paddingVertical="6dp"
                    android:text="Bahasa"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp"
                    app:icon="@drawable/ic_language"
                    app:iconPadding="16dp"
                    app:iconSize="30dp"
                    app:iconTint="?attr/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
